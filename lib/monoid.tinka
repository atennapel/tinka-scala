import "lib/id";

def Monoid =
  (A : Type) **
  (unit : A) **
  ((++) : A -> A -> A) **
  ();

def VerifiedMonoid =
  (monoid : Monoid) **
  let A = monoid.A;
  let unit = monoid.unit;
  let (++) = monoid.(++);  
  (idL : (x : A) -> (unit ++ x) ~ x) **
  (idR : (x : A) -> x ~ (unit ++ x)) **
  (assoc : (x y z : A) -> (x ++ (y ++ z)) ~ ((x ++ y) ++ z)) **
  ();
